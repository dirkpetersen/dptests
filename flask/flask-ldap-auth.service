[Unit]
Description=Flask LDAP Authentication Service
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root
#Environment="PATH=/root/venv/bin"
#ExecStart=/root/venv/bin/python /root/flask-ldap-auth.py
ExecStart=/usr/bin/python3 /root/flask-ldap-auth.py
SyslogIdentifier=flask-ldap-auth

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target